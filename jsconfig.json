{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@contexts/*": ["src/contexts/*"],
      "@data/*": ["data/*"],
      "@guards/*": ["guards/*"],
      "@hooks/*": ["hooks/*"],
      "@layouts/*": ["layouts/*"],
      "@locals/*": ["locals/*"],
      "@lib/*": ["lib/*"],
      "@redux/*": ["redux/*"],
      "@sections/*": ["sections/*"],
      "@styles/*": ["styles/*"],
      "@theme/*": ["theme/*"],
      "@types": ["types/index"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
